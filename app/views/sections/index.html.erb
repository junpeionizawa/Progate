<div class="container">
	<div class="row">
		<table class="table">
			<% @section.each do |section| %>
				<tr>
					<th>問題：<%= section.question_sentence %><br></th>
					<th>解答：<%= section.answer %></th>
					<th><%= link_to "詳細", section_path(section.id), class: "btn btn-default" %></th>
				</tr>
			<% end %>
		</table>
	</div>
</div>