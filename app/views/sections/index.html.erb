<div class="My-section">
	<div class="container">
		<div class="row">
			<div class="col-md-11">
				<h2 class="u">My単語帳</h2>
				<div class="c-card-6">
					<div class="user_profile">
						<table>
							<tbody>
								<% @sections.order(created_at: "desc").each do |section| %>
								<tr>
									<th><%= section.created_at.strftime("%Y-%m-%d %H:%M:%S") %></th><br>
									<th><div class="separate"></div></th>
									<th><%= section.question_sentence %></th><br>
									<th><div class="separate"></div></th>
									<th><%= section.answer %></th>
									<th><div class="separate"></div></th>
									<th><%= link_to "メモを見る",section_path(section.id),class: "btn btn-default" %></th>
									<th><%= link_to "削除", section_path(section.id), method: :delete,"data-confirm" => "削除します", class: "btn btn-default" %></th>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
					<%= paginate @sections %>
				</div>
			</div>
		</div>
    </div>
</div>